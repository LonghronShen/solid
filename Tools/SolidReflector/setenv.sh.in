#!/bin/bash

# Set up the environment. Needed before building or starting.

platform='unknown'
unamestr=`uname`
if [[ "$unamestr" == 'Linux' ]]; then
   platform='linux'
elif [[ "$unamestr" == 'Darwin' ]]; then
   platform='macos'
fi

if [[ $platform != 'unknown' ]]; then
alias SolidReflector.exe='mono @CMAKE_RUNTIME_OUTPUT_DIR@/SolidReflector.exe'
fi

# FIXME: Remove when we merge with SolidOpt v0.2
if [ ! -f @CMAKE_SOURCE_DIR@/public.snk ]; then
   ln -s @CMAKE_SOURCE_DIR@/src/vendors/SolidOpt/public.snk @CMAKE_SOURCE_DIR@/public.snk
fi
